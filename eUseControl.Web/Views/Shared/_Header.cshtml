@using eUseControl.Domain.Enums
@using eUseControl.Extension
@model eUseControl.Models.UserData
<div class="topbar">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 text-sm">
                <div class="site-info">
                    <a href="#"><span class="mai-call text-primary"></span> +37360000000</a>
                    <span class="divider">|</span>
                    <a href="#"><span class="mai-mail text-primary"></span> mail@example.com</a>
                </div>
            </div>
            <div class="col-sm-4 text-right text-sm">
                <div class="social-mini-button">
                    <a href="#"><span class="mai-logo-facebook-f"></span></a>
                    <a href="#"><span class="mai-logo-twitter"></span></a>
                    <a href="#"><span class="mai-logo-dribbble"></span></a>
                    <a href="#"><span class="mai-logo-instagram"></span></a>
                </div>
            </div>
        </div> <!-- .row -->
    </div> <!-- .container -->
</div> <!-- .topbar -->

<nav class="navbar navbar-expand-lg navbar-light shadow-sm">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("Index","Home")"><span class="text-primary">Car</span>-Sale</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupport" aria-controls="navbarSupport" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupport">
             <ul class="navbar-nav ml-auto">
                  <li class="nav-item active">
                       <a class="nav-link" href="@Url.Action("Index","Home")">Home</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","AddProd")">Add Product</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","Products")">Products</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","Sportcar")">Sedan</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","Suv")">SUV</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","Style")">Wagon</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("Index","News")">News</a>
                  </li>
                  <li class="nav-item">
                       <a class="nav-link" href="#contact">Contact</a>
                  </li>
                  @{
                       if (Session["Username"] == null)
                       {
                            <li class="nav-item">
                                 <a class="btn btn-primary ml-lg-3" href="@Url.Action("Index","Login")">Login</a>
                            </li>
                            <li class="nav-item">
                                 <a class="btn btn-primary ml-lg-3" href="@Url.Action("Index","Register")">Register</a>
                            </li>
                       }
                       else
                       {
                            var user1 = System.Web.HttpContext.Current.GetMySessionObject();
                            <li class="nav-item"><a class="btn btn-primary ml-lg-3" href="@Url.Action("Index", "User" )">@Html.DisplayFor(u => u.Username)</a></li>
                            if (user1.Level == URole.Admin)
                            {
                                 <li class="nav-item"><a class="btn btn-primary ml-lg-3" href="@Url.Action("Index", "Admin")">AdminPanel</a></li>
                            }
                            <li class="nav-item"><a class="btn btn-primary ml-lg-3" href="@Url.Action("Logout", "Login")">Logout</a></li>
                       }
                  }
             </ul>
        </div> <!-- .navbar-collapse -->
    </div> <!-- .container -->
</nav>