@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
     <title>New Sedan Cars</title>
     <style>
          /* Add your custom CSS styles here */
          .container {
               max-width: 1200px;
               margin: 0 auto;
               padding: 20px;
          }

          .car-list {
               display: grid;
               grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
               grid-gap: 20px;
          }

          .car {
               background-color: #f4f4f4;
               padding: 20px;
               border-radius: 5px;
          }

               .car img {
                    max-width: 100%;
                    height: auto;
                    margin-bottom: 10px;
               }

               .car h2 {
                    margin-top: 0;
               }

               .car p {
                    margin-bottom: 0;
               }
     </style>
</head>
<body>
     <div class="container">
          <h1>New Sedan Cars</h1>
          <div class="car-list">
               <div class="car">
                    <img src="~/assets/img/camry.jpg" alt="Toyota Camry">
                    <h2>Toyota Camry</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vitae commodo mi, nec ultrices nisi. Fusce eget iaculis mi, et lobortis magna.</p>
               </div>
               <div class="car">
                    <img src="~/assets/img/civic.jpg" alt="Honda Civic">
                    <h2>Honda Civic</h2>
                    <p>Sed fringilla purus eu elit consectetur, at gravida elit consectetur. In ac iaculis est. Nam ultrices, sem nec rutrum sagittis.</p>
               </div>
               <div class="car">
                    <img src="~/assets/img/altima.jpg" alt="Nissan Altima">
                    <h2>Nissan Altima</h2>
                    <p>Phasellus id metus eu mauris pharetra convallis eu id enim. Mauris posuere magna vel vestibulum malesuada. Donec in consectetur metus.</p>
               </div>
               <!-- Add more cars as needed -->
          </div>
     </div>
</body>
</html>
